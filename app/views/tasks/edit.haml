= new_link(new_product_sprint_task_path(@product.slug, @sprint, {:story_id => @task.story_id}), t('app.taskks.new'))
- form_for [@product, @sprint, @task], :url => product_sprint_task_path(@product.slug, @sprint, @task) do |f|
  %fieldset
    %legend= t('app.taskks.edit')
    = render :partial => 'tasks/form', :locals => { :f => f }
    %p= button_tag t('system.update'), :accept, :class => 'positive', :tabindex => 10

