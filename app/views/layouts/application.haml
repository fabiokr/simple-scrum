!!! XML
!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", 'xml:lang' => "en" }
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    %title= title
    / External stylesheets
    = stylesheet_link_merged :base_screen
    = stylesheet_link_merged :base_print, :media => 'print'
    / Application stylesheets
    = stylesheets(:path => 'compiled')
  %body
    #header
      %h1 Personal-Scrum
      %hr
    #navigation
      = breadcrumbs
    #content
      #message
        = render :partial => 'layouts/message'
      = yield
    #footer
      personal-scrum 0.1 2009
      =link_to(image_tag('http://www.w3.org/Icons/valid-xhtml10-blue', :alt => 'Valid XHTML 1.0 Transitional', :height => '31', :width => '88'), 'http://validator.w3.org/check?uri=referer')
      =link_to(image_tag('http://jigsaw.w3.org/css-validator/images/vcss-blue', :alt => 'Valid CSS', :height => '31', :width => '88'), 'http://jigsaw.w3.org/css-validator/check/referer')

      / External javascripts
      = javascript_include_merged :base
      / Application javascrips
      = javascripts

