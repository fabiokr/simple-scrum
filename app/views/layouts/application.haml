!!! XML
!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", 'xml:lang' => "en" }
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    %title= title
    / External stylesheets
    = stylesheet_link_merged :base_screen
    = stylesheet_link_merged :base_print, :media => 'print'
    / Application stylesheets
    = stylesheets(:path => 'compiled')
  %body
    #header
      %h1{:class => 'inline'} Personal-Scrum
      - form_tag search_path, :method => :get, :class => 'search inline right' do
        = text_field_tag 'q', nil, :title => t('app.search_hint') ,:class => 'text smallInput'
        = button_tag t('system.search'), :find, :class => 'search inline'
    #navigation
      %ul{:id => 'topnav'}
        %li= link_to t('app.menu.logout'), '/logout'
        %li= link_to t('app.menu.settings'), '/logout'
      = breadcrumbs
    #content
      = render :partial => 'layouts/message'
      = yield
    #footer{:class => 'center'}
      personal-scrum 0.1 2009

      / External javascripts
      = javascript_include_merged :base
      / Application javascrips
      = javascripts

