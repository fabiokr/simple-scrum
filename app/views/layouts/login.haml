%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", 'xml:lang' => "en" }
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    %title= title
    / External stylesheets
    = stylesheet_link_merged :base_screen
    = stylesheet_link_merged :base_print, :media => 'print'
    / Application stylesheets
    = stylesheets(:path => 'compiled')
  %body
    #header
      %h1{:class => 'inline'} Personal-Scrum
    #content
      .login
        = render :partial => 'layouts/message'
        = yield
    #footer{:class => 'center'}
      personal-scrum 0.1 2009

      / External javascripts
      / javascript_include_merged :base
      = javascript_include_tag 'libs/jquery-1.3.2', 'libs/jquery-ui-1.7.2.min', 'libs/jquery.form', 'libs/jquery.spinner', 'libs/jquery.blueprint.showgrid', 'libs/jquery.validationEngine', 'libs/jquery.colorpicker', 'libs/jquery.inputHint', 'libs/underscore', 'application.en-US', :cache => true
      / Application javascrips
      = javascripts

