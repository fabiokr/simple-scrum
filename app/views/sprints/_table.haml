%table.dataList
  %caption
    ="#{t('app.sprints.index')} - #{t('system.found_registries', :count => sprints.count)}"
  %thead
    %tr
      %th= order search, :by => :name, :as => t('activerecord.models.sprint')
      %th= order search, :by => :start, :as => t('activerecord.attributes.sprint.start')
      %th= order search, :by => :end, :as => t('activerecord.attributes.sprint.end')
      %th= order search, :by => :updated_at, :as => t('activerecord.attributes._all.updated_at')
      %th
      %th
      %th
  %tbody
    - sprints.each do |sprint|
      %tr
        %td= sprint.name
        %td= h sprint.start.to_formatted_s(:short) unless sprint.start.nil?
        %td= h sprint.end.to_formatted_s(:short) unless sprint.end.nil?
        %td= h sprint.updated_at.to_formatted_s(:short)
        %td= show_link product_sprint_path(@product, sprint)
        %td= edit_link edit_product_sprint_path(@product, sprint)
        %td= delete_link product_sprint_path(@product, sprint)

